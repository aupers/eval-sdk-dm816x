+int tweak_descriptor(int fd, int descFlags2Add, int statusFlags2Add)
+{
+        int flags;
+        if (descFlags2Add) {
+                flags = fcntl(fd, F_GETFD);
+                flags |= descFlags2Add;
+                if (-1 == fcntl(fd, F_SETFD, flags)) {
+                        return -1;
+                }
+        }
+        if (statusFlags2Add) {
+                flags = fcntl(fd, F_GETFL);
+                flags |= statusFlags2Add;
+                if (-1 == fcntl(fd, F_SETFL, flags)) {
+                        return -1;
+                }
+        }
+        return 0;
+}
